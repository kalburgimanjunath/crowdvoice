<header class='form'>
  <ul class="action-buttons clearfix fr">
    <li>
      <%= link_to new_admin_user_path, {:class => 'button button-gray'} do %>
      <span class="add"></span>
      New User
      <% end %>
    </li>
  </ul>
  <h2>Users</h2>
</header>
<section class="with-table">
  <table class="datatable paginate full">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody> 
    <% for user in @users %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin ? 'Admin' : 'Normal'%></td>
        <td style="width: 25px"><%= link_to "Edit", edit_admin_user_path(user) %></td>
        <td style="width: 25px"><%= link_to "Delete", [:admin, user], :confirm => "Are you sure?", :method => :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

<%= paginate @users %>